# .env.example

# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:true!false@localhost:5432/auto_parts_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_TOKEN_EXPIRATION=90d

# OTP
OTP_SECRET=your-otp-secret-key
OTP_EXPIRATION=300
OTP_LENGTH=4

# SMS Provider (SMS.ru)
SMS_API_KEY=your-sms-ru-api-key
SMS_FROM=AutoPartsASO

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_TTL=60
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_OTP_TTL=60
RATE_LIMIT_OTP_MAX=3

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# Swagger
SWAGGER_TITLE="ASO Auto Parts API"
SWAGGER_DESCRIPTION="API documentation for Auto Parts e-commerce platform"
SWAGGER_VERSION="1.0"
SWAGGER_PATH=docs

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH="./logs"